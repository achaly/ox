<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bg"
        android:layout_gravity="center"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="100%"
        android:scaleType="fitCenter"
        android:src="@mipmap/tutorial_bg_3"
        android:layout_height="0dp"
        android:layout_width="0dp" />

    <ImageView
        android:id="@+id/cover3"
        android:layout_gravity="center"
        app:layout_marginTopPercent="30%"
        app:layout_marginRightPercent="14%"
        android:layout_alignParentRight="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/tutorial_cover_3_3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <ImageView
        android:id="@+id/cover2"
        android:layout_gravity="center"
        app:layout_marginTopPercent="55%"
        app:layout_marginLeftPercent="12%"
        android:scaleType="fitCenter"
        android:src="@mipmap/tutorial_cover_3_2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <ImageView
        android:id="@+id/people"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="28%"
        android:scaleType="fitCenter"
        android:src="@mipmap/tutorial_people"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />



    <ImageView
        android:id="@+id/title"
        android:layout_gravity="center"
        app:layout_marginTopPercent="62%"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/tutorial_title_3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <ImageView
        android:id="@+id/hand"
        android:layout_gravity="center"
        app:layout_marginTopPercent="66%"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/tutorial_hand"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <ImageView
        android:id="@+id/cover1"
        android:layout_gravity="center"
        app:layout_marginTopPercent="50%"
        app:layout_marginRightPercent="8%"
        android:layout_alignParentRight="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/tutorial_cover_3_1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <ImageView
        android:id="@+id/cover5"
        android:layout_gravity="center"
        app:layout_marginTopPercent="15%"
        app:layout_marginLeftPercent="15%"
        android:scaleType="fitCenter"
        android:src="@mipmap/tutorial_cover_3_5"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <ImageView
        android:id="@+id/cover4"
        android:layout_gravity="center"
        app:layout_marginTopPercent="8%"
        app:layout_marginRightPercent="20%"
        android:layout_alignParentRight="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/tutorial_cover_3_4"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />



</android.support.percent.PercentRelativeLayout>